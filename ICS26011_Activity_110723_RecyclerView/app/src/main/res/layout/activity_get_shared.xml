<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetShared">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
                <TextView
                    android:id="@+id/txtEmpNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    tools:layout_editor_absoluteX="102dp"
                    tools:layout_editor_absoluteY="87dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtEmpName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name Here"
                    tools:layout_editor_absoluteX="102dp"
                    tools:layout_editor_absoluteY="87dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
            <TextView
                android:id="@+id/txtEmpAgelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Age"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="177dp"
                android:layout_marginRight="33dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtEmpAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Age Here"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="87dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
            <TextView
                android:id="@+id/txtEmpSalaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Salary"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="265dp"
                android:layout_marginRight="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtEmpSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Salary Here"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="87dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>